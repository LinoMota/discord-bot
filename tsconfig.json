{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", 
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src", 
    "removeComments": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "strictFunctionTypes": true, 
    "strictBindCallApply": true, 
    "strictPropertyInitialization": true, 
    "noImplicitThis": true, 
    "alwaysStrict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true ,
    "moduleResolution": "Node"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./build"
  ]
}